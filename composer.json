{
    "name": "cblink-service/wechat-open-platform",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nick",
            "email": "nick@httpd.cc"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.2",
        "cblink-service/kernel": "dev-master",
        "mockery/mockery": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Cblink\\Service\\Wechat\\OpenPlatform\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cblink\\Service\\Wechat\\OpenPlatform\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check-style": [
        "./vendor/bin/php-cs-fixer fix --using-cache=no --diff --config=.php_cs --dry-run --ansi"
        ],
        "fix-style": [
        "./vendor/bin/php-cs-fixer fix --using-cache=no --config=.php_cs --ansi"
        ]
    }
}
